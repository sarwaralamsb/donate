<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lesswhite"
    android:padding="15dp"
    android:id="@+id/addimageLayer">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datetvi"
        android:maxHeight="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="5dp">
        <EditText
            android:id="@+id/postdetailseti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="70dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="start"
            android:hint="Details"
            android:inputType="textMultiLine"
            android:padding="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:padding="5dp"
        android:id="@+id/r2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/r1"
        android:background="@color/white">
        <EditText
            android:id="@+id/postphoneeti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Phone No."
            android:padding="5dp"
            android:inputType="phone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:padding="5dp"
        android:id="@+id/r3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/r2"
        android:background="@color/white">
        <EditText
            android:id="@+id/postaddresseti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Collection Address"
            android:inputType="textPostalAddress" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/imagedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/r3"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnupposti"
        android:layout_marginBottom="10dp"

        />

    <Button
        android:id="@+id/btnupposti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Upload"
        android:onClick="uploadPostI"
        android:background="@color/LightSeaGreen"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/unviewtvi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/r1"
        android:layout_marginTop="0dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/datetvi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/r1"
        android:layout_below="@+id/unviewtvi"
        android:text=""
        android:textSize="14sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/notcollectedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/r1"
        android:layout_alignTop="@+id/imagedi"
        android:text="Process Not Started"
        android:textColor="@color/lesswhite"
        android:textSize="0sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/changeimagetxtbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/r1"
        android:layout_alignEnd="@+id/r1"
        android:text="Add New Image"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />


</RelativeLayout>