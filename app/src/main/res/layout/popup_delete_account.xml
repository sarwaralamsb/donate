<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="180dp"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/textViewdpop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="18sp"
        android:background="@color/lesswhite"
        android:text="Are you sure that you want to delete your account permanently?" />



    <Button
        android:id="@+id/delpopyesbtn"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/LightSeaGreen"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/textViewdpop"
        android:layout_below="@id/textViewdpop"
        android:text="YES"
        tools:ignore="RtlCompat" />
</RelativeLayout>